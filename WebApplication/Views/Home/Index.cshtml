@model WebApplication.Models.ViewModel.ClientPlanViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    @{ 
        string minhaClasse = Model.Plan.Count > 1 ? "classeTeste" : null;
    }

    <h1 class="minhaClasse">@Model.Client.Name</h1>

    @if (Model.Plan.Count > 0)
    {
        <ul>
            @foreach (var plan in Model.Plan)
            {
                <li>
                    Plan: @plan.Name // Value: R$ @plan.Value.ToString("F2")
                </li>
            }
        </ul>
    }
    else
    {
        <p>Não existem Planos</p>
    }

</div>

